{% extends asset('templates/layouts/layout.twig') %}

{% block title %}Tipo de Telefono{% endblock %}

{% block tituloform %}Tipo de Telefono{% endblock %}

{% block content %}


    <div class="col-md-6">

        <form role="form" action="add" method="POST">

            <div class="form-group">
                <input id="id" 
                       type="hidden" 
                       name="id" 
                       value="{{tipotelefonomodel.id}}"></input>
                <label>Nombre</label>
                <input id="nombre" 
                       type="text" 
                       name="nombre" 
                       value="{{tipotelefonomodel.nombre}}" 
                       class="form-control"/>

                <div class="form-group">
                    <a href="#" th:href="@{/tipotelefono/cancel}">
                        <button class="btn btn-default pull-right" style="margin: 5px" type="submit">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancelar
                        </button>
                    </a>
                    <button class="btn btn-primary pull-right" style="margin: 5px" type="submit">
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Guardar
                    </button>

                </div>
        </form>
    </div>

{% endblock %}