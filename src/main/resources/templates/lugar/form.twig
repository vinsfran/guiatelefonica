{% extends asset('templates/layouts/layout.twig') %}

{% block title %}Lugar{% endblock %}

{% block tituloform %}Lugar{% endblock %}

{% block content %}


    <div class="col-md-6">

        <form role="form" action="add" method="POST">

            <div class="form-group">
                <input id="id" 
                       type="hidden" 
                       name="id" 
                       value="{{lugarmodel.id}}"></input>
                <label>Nombre</label>
                <input id="nombre" 
                       type="text" 
                       name="nombre" 
                       value="{{lugarmodel.nombre}}" 
                       class="form-control"/>

                <label>Tipo de Telefono</label>

                <select id="tipoLugarId"
                        name="tipoLugarId.id" 
                        class="form-control">

                    {% for tipolugar in tiposlugares %}
                        <option value="{{tipolugar.id}}">{{tipolugar.nombre}}</option>
                    {% endfor %}

                </select> 

            </div>                   

            <div class="form-group">
                <a href="#" th:href="@{/lugar/cancel}">
                    <button class="btn btn-default pull-right" style="margin: 5px" type="submit">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancelar
                    </button>
                </a>
                <button class="btn btn-primary pull-right" style="margin: 5px" type="submit">
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Guardar
                </button>

            </div>
        </form>
    </div>

    <div class="col-md-6">
        <label>Telefonos</label>

        <div class="row">
            <div>
                <a href="form?id=0" class="todo-list">
                    <button class="btn btn-primary small pull-right" style="margin-right: 16px" type="submit"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></button>
                </a>
            </div>
        </div>

        <div class="form-group">
            <table data-toggle="table" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc">
                <thead>
                    <tr>
                        <th>Numero</th>
                        <th>Tipo Telefono</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for telefono in lugarmodel.telefonoList %}
                        <tr class="todo-list">
                            <td>{{telefono.numero}}</td>
                            <td>{{telefono.tipoTelefonoId.nombre}}</td>
                            <td>
                                <div class="pull-left">
                                    <a href="form?id={{telefono.id}}" style="padding: 5px">
                                        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                                    </a>
                                    <a href="remove?id={{telefono.id}}" style="padding: 5px">
                                        <button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></svg></button>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}