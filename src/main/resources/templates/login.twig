{% extends asset('templates/layouts/layout.twig') %}

{% block title %}Login{% endblock %}

{% block header %} {% endblock %}

{% block tituloform %}Acceso al Sistema{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-body">

                    {% if (error) %}
                        <div class="alert alert-danger" role="alert">Usuario o password incorrecto</div>
                    {% endif %}

                    {% if (logout) %}
                        <div class="alert alert-info" role="alert">Fin de sesi√≥n!</div>
                    {% endif %}

                    <form role="form" action="/logincheck" method="POST">
                        <fieldset>
                            <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}"></input>
                            <div class="form-group">
                                <input class="form-control" placeholder="Usuario" name="username" type="text" autofocus="" id="username"/>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password" value="" id="password"/>
                            </div>

                            <label for="inputPassword" class="sr-only">Password</label>



                            <button class="btn btn-primary" type="submit">
                                <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Ingresar
                            </button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block footer %}{% endblock %}
