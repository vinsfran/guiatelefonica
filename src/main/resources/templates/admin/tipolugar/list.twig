{% extends asset('templates/layouts/layout.twig') %}

{% block title %}Tipos de Lugares{% endblock %}


{% block content %}

    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Tipos de Lugares</div>


                    <div class="panel-body">

                        {% if (mensaje) %}
                            <div class="{{classmensaje}}" role="alert">{{mensaje}}</div>
                        {% endif %}
                        <div class="row">
                            <div>
                                <a href="/tipolugar/form?id=0" class="todo-list">
                                    <button class="btn btn-primary small pull-right" style="margin-right: 16px" type="submit"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></button>
                                </a>
                            </div>
                        </div>


                        <table data-toggle="table" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for tipolugar in tiposlugares %}
                                    <tr class="todo-list">
                                        <td>{{tipolugar.nombre}}</td>
                                        <td>
                                            <div class="pull-left">
                                                <a href="/tipolugar/form?id={{tipolugar.id}}" style="padding: 5px">
                                                    <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                                                </a>
                                                <a href="/tipolugar/remove?id={{tipolugar.id}}" style="padding: 5px">
                                                    <button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></svg></button>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
        <br/>
        <div class="panel panel-default">

        </div>


    </div>

{% endblock %}